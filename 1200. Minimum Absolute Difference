class Solution:
    def minimumAbsDifference(self, arr: List[int]) -> List[List[int]]:
        arr.sort()
        dif = max(arr)
        res = []

        for i in range(1, len(arr)):
            num = arr[i] - arr[i - 1]
            if num < dif:
                dif = num

        if len(arr) <= 2:
            return [arr]
        else:
            for i in range(1, len(arr)):
                if arr[i] - arr[i - 1] == dif:
                    res.append([arr[i - 1], arr[i]])

        return res
