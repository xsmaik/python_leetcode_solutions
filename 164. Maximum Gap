class Solution:
    def maximumGap(self, nums: List[int]) -> int:
        nums.sort()
        maximumGep = 0

        if len(nums) < 2:
            print(0)
        else:
            for i in range(1, len(nums)):
                maximum = nums[i] - nums[i - 1]
                maximumGep = maximum if maximum > maximumGep else maximumGep

        return maximumGep
