class Solution:
    def maxDistance(self, colors: List[int]) -> int:
        res = 0

        for i in range(len(colors)):
            total = 0
            for j in range(i + 1, len(colors)):
                if colors[i] != colors[j]:
                    total = abs(i - j)
                    if total > res:
                        res = total

        return res
