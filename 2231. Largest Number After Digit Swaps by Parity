class Solution:
    def largestInteger(self, num: int) -> int:
        n = len(str(num))
        nums = [int(digit) for digit in str(num)]
        even = []
        odd = []
        res = 0

        for i in nums:
            if i % 2 == 0:
                even.append(i)
            else:
                odd.append(i)

        even.sort()
        odd.sort()

        for i in range(n):
            if nums[i] % 2 == 0:
                res = res * 10 + even.pop()
            else:
                res = res * 10 + odd.pop()

        return res
